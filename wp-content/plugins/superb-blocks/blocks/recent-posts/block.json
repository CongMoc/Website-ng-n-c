{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 2,
  "name": "superb-addons/recent-posts",
  "version": "0.1.0",
  "title": "Superb Recent Posts",
  "category": "superb-addons-blocks",
  "icon": "list-view",
  "description": "Superbly designed recent posts block for your WordPress site.",
  "keywords": [
    "post",
    "posts",
    "recent",
    "latest",
    "latest posts",
    "recent posts",
    "list"
  ],
  "supports": {
    "html": false,
    "align": ["left", "right"]
  },
  "attributes": {
    "IsInEditor": { "type": "boolean", "default": false },
    "toolbarAlignment": { "type": "string", "default": "left" },
    "numberOfPosts": { "type": "number", "default": 5 },
    "selectedCategories": { "type": "array", "default": [] },
    "selectedTags": { "type": "array", "default": [] },
    "displayAuthor": { "type": "boolean", "default": true },
    "useAuthorDisplayName": { "type": "boolean", "default": true },
    "displayDate": { "type": "boolean", "default": true },
    "displayCommentCount": { "type": "boolean", "default": false },
    "displayExcerpt": { "type": "boolean", "default": false },
    "excerptLength": { "type": "number", "default": 10 },
    "linksTargetBlank": { "type": "boolean", "default": false },
    "displayThumbnails": { "type": "boolean", "default": true },
    "displayPlaceholderThumbnails": { "type": "boolean", "default": true },
    "thumbnailSize": { "type": "number", "default": 45 },
    "imgBorderRadiusEnabled": { "type": "boolean", "default": false },
    "imgBorderRadius": { "type": "number", "default": 8 },
    "excludeCurrent": { "type": "boolean", "default": false },
    "displayBlockOnFront": { "type": "boolean", "default": true },
    "displayBlockOnBlog": { "type": "boolean", "default": true },
    "displayBlockOnPagesPosts": { "type": "boolean", "default": true },
    "fontSizeTitle": { "type": "number", "default": 16 },
    "fontSizeExcerpt": { "type": "number", "default": 14 },
    "fontSizeMeta": { "type": "number", "default": 14 },
    "fontSizeCommentCount": { "type": "number", "default": 14 },
    "colorTitle": { "type": "string", "default": "#444444" },
    "colorExcerpt": { "type": "string", "default": "#7C7C7C" },
    "colorMeta": { "type": "string", "default": "#7C7C7C" },
    "colorCommentCount": { "type": "string", "default": "#7C7C7C" }
  },
  "textdomain": "superb-blocks",
  "editorScript": "file:./index.js",
  "editorStyle": "file:./index.css",
  "style": "file:./style-index.css"
}
